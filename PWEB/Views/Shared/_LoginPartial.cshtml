@using Microsoft.AspNetCore.Identity
@using PWEB.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div style="display: flex; flex-direction: row; align-items: center;">
        <li class="nav-item">
            <a data-tippy-content="@User.Identity.Name" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" style="height: 35px; width: 35px; border-radius: 50%;"/>
            </a>
              
        </li>
        <li class="nav-item" style="margin-left: 15px;">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </li>
        </div>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-warning" asp-area="Identity" asp-page="/Account/Register">Registar</a>
            <a class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
        </li>
    }

    <script>
        tippy('[data-tippy-content]');
    </script>
</ul>